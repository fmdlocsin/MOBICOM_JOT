<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/lighter">

        <!-- RecyclerView for journal entries -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/journalRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp"
            android:clipToPadding="false"
            android:scrollbars="vertical" />

        <!-- Top-right "Playlist of the Week" button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnPlaylist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Playlist of the Week"
            android:textColor="@color/black"
            android:backgroundTint="@color/white"
            app:strokeColor="@color/black"
            app:strokeWidth="1dp"
            app:cornerRadius="12dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="24dp"
            android:layout_gravity="top|end" />

        <!-- Bottom "New Entry" FAB style button -->
        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/btnNewEntry"
            android:layout_width="184dp"
            android:layout_height="67dp"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="32dp"
            android:text="New Entry"
            android:textColor="@color/black"
            app:backgroundTint="@color/white"
            app:cornerRadius="16dp"
            app:icon="@drawable/ic_edit"
            app:iconPadding="8dp"
            app:iconTint="@color/black"
            app:strokeColor="@color/black"
            app:strokeWidth="1dp" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>
