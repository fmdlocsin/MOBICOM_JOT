<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:layout_marginTop="4dp"
    android:layout_marginHorizontal="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Title -->
        <TextView
            android:id="@+id/textTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@android:color/black" />

        <!-- Mood -->
        <TextView
            android:id="@+id/textMood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mood: Calm"
            android:textStyle="italic"
            android:textColor="@android:color/darker_gray"
            android:layout_below="@id/textTitle"
            android:layout_marginTop="4dp" />

        <!-- Timestamp -->
        <TextView
            android:id="@+id/textTimestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="July 27, 2025"
            android:textSize="12sp"
            android:textColor="@android:color/darker_gray"
            android:layout_below="@id/textMood"
            android:layout_marginTop="2dp" />

        <!-- Reflection -->
        <TextView
            android:id="@+id/textContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reflection goes here..."
            android:layout_below="@id/textTimestamp"
            android:layout_marginTop="8dp"
            android:textColor="@android:color/black" />

        <!-- Edit Button -->
        <ImageButton
            android:id="@+id/btnEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/textContent"
            android:layout_marginTop="8dp"
            android:src="@android:drawable/ic_menu_edit"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Edit" />

        <!-- Delete Button -->
        <ImageButton
            android:id="@+id/btnDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/btnEdit"
            android:layout_below="@id/textContent"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:src="@android:drawable/ic_menu_delete"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Delete" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>
