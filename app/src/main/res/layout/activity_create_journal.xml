<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/lighter">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <!-- Back Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnBack"
            android:layout_width="35dp"
            android:layout_height="40dp"
            android:layout_margin="16dp"
            android:layout_gravity="start"
            app:backgroundTint="@color/white"
            app:cornerRadius="16dp"
            app:icon="@drawable/ic_arrow_back"
            app:iconTint="@color/black"
            app:iconGravity="textStart"
            android:elevation="2dp"/>


        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="24dp"
            android:fillViewport="true">

            <LinearLayout
                android:id="@+id/containerMood"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">

            <!-- Title Input -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="What's the vibe today?"
                    app:boxBackgroundColor="@color/white"
                    app:boxStrokeColor="@color/darker">
                    <!--app:boxElevation="4dp"-->

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/inputTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Mood Spinner -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:layout_gravity="start"
                    android:text="How are we feeling?"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <Spinner
                    android:id="@+id/spinnerMood"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/spinner_outline" />

                <!-- Reflection Input -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:hint="Whatâ€™s on your mind?"
                    app:boxBackgroundColor="@color/white"
                    app:boxStrokeColor="@color/darker">
                    <!--app:boxElevation="4dp"-->

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/inputReflection"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="200dp"
                        android:gravity="top"
                        android:inputType="textMultiLine"
                        android:maxLines="10"
                        android:scrollbars="vertical"
                        android:textColor="@color/black" />
                    </com.google.android.material.textfield.TextInputLayout>

                <!-- Image Preview Flexbox (up to 5 thumbnails) -->
                <com.google.android.flexbox.FlexboxLayout
                    android:id="@+id/imagePreviewContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:visibility="gone"
                    app:flexWrap="wrap"
                    app:justifyContent="flex_start"
                    app:alignItems="stretch"
                    android:padding="4dp" />

                <!-- Add Image Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnAddImage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Add Image"
                    android:textColor="@color/black"
                    app:backgroundTint="@color/white"
                    app:cornerRadius="12dp"
                    app:iconPadding="8dp"
                    app:iconTint="@color/black"
                    app:strokeColor="@color/black"
                    app:strokeWidth="1dp" />

                <!-- Save Entry Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSaveEntry"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="24dp"
                    android:text="Save Entry"
                    android:textColor="@color/black"
                    app:backgroundTint="@color/white"
                    app:strokeColor="@color/black"
                    app:strokeWidth="1dp"
                    app:cornerRadius="12dp" />
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
        </LinearLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>
