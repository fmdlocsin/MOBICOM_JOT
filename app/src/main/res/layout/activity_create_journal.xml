<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/lighter">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="24dp"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Mood / Title -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Mood or Title"
                    app:boxBackgroundColor="@color/white"
                    app:boxStrokeColor="@color/darker">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/inputMood"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Reflection -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:hint="Whatâ€™s on your mind?"
                    app:boxBackgroundColor="@color/white"
                    app:boxStrokeColor="@color/darker">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/inputReflection"
                        android:layout_width="match_parent"
                        android:layout_height="609dp"
                        android:gravity="top"
                        android:inputType="textMultiLine"
                        android:maxLines="6"
                        android:textColor="@color/black" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Optional Preview Image -->
                <ImageView
                    android:id="@+id/imagePreview"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginTop="24dp"
                    android:scaleType="centerCrop"
                    android:visibility="gone"
                    android:background="@color/white"
                    android:contentDescription="Selected image"
                    android:adjustViewBounds="true" />

                <!-- Add Image Button -->
                <!-- Save Entry Button -->

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnAddImage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Add Image"
                    android:textColor="@color/black"
                    app:backgroundTint="@color/white"
                    app:cornerRadius="12dp"
                    app:icon="@drawable/ic_add_photo"
                    app:iconPadding="8dp"
                    app:iconTint="@color/black"
                    app:strokeColor="@color/black"
                    app:strokeWidth="1dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSaveEntry"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="dp"
                    android:text="Save Entry"
                    android:textColor="@color/black"
                    app:backgroundTint="@color/white"
                    app:strokeColor="@color/black"
                    app:strokeWidth="1dp"
                    app:cornerRadius="12dp" />

            </LinearLayout>
        </ScrollView>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>
