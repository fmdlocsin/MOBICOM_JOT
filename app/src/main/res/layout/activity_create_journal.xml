<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/lighter">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="24dp"
            android:fillViewport="true">

            <LinearLayout
                android:id="@+id/containerMood"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">

            <!-- Title Input -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="What's the vibe today?"
                    app:boxBackgroundColor="@color/white"
                    app:boxStrokeColor="@color/darker"
                    app:boxElevation="4dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/inputTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Mood Spinner -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:layout_gravity="start"
                    android:text="How are we feeling?"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <Spinner
                    android:id="@+id/spinnerMood"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/spinner_outline" />

                <!-- Reflection Input -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:hint="Whatâ€™s on your mind?"
                    app:boxBackgroundColor="@color/white"
                    app:boxStrokeColor="@color/darker"
                    app:boxElevation="4dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/inputReflection"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="200dp"
                        android:gravity="top"
                        android:inputType="textMultiLine"
                        android:maxLines="10"
                        android:textColor="@color/black" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Image Preview -->
                <ImageView
                    android:id="@+id/imagePreview"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginTop="24dp"
                    android:scaleType="centerCrop"
                    android:visibility="gone"
                    android:background="@color/white"
                    android:contentDescription="Selected image"
                    android:adjustViewBounds="true" />

                <!-- Add Image Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnAddImage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Add Image"
                    android:textColor="@color/black"
                    app:backgroundTint="@color/white"
                    app:cornerRadius="12dp"
                    app:iconPadding="8dp"
                    app:iconTint="@color/black"
                    app:strokeColor="@color/black"
                    app:strokeWidth="1dp" />

                <!-- Save Entry Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSaveEntry"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="24dp"
                    android:text="Save Entry"
                    android:textColor="@color/black"
                    app:backgroundTint="@color/white"
                    app:strokeColor="@color/black"
                    app:strokeWidth="1dp"
                    app:cornerRadius="12dp" />
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>
